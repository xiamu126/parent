<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sybd.znld.service.mapper.znld.RegionMapper">
    <insert id="insert" parameterType="com.sybd.znld.service.model.znld.RegionModel">
        <selectKey keyProperty="id" resultType="string" order="BEFORE">
            select replace(uuid(), '-', ''); <!--设置了这个之后自动绑定id这个值，就算你在model里设置了id，用的还是这里这个id-->
        </selectKey>
        insert region(id, name, status) VALUES (#{id}, #{name}, #{status});
    </insert>
    <select id="selectById" resultType="com.sybd.znld.service.model.znld.RegionModel">
        select * from region where id = #{_parameter};
    </select>
    <select id="selectByName" resultType="com.sybd.znld.service.model.znld.RegionModel">
        select * from region where name = #{_parameter};
    </select>
    <update id="updateById" parameterType="com.sybd.znld.service.model.znld.RegionModel">
        update region
        set name = #{name}, status = #{status}
        where id = #{id};
    </update>
</mapper>